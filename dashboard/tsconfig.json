{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "baseUrl": "src",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "build"]
}
